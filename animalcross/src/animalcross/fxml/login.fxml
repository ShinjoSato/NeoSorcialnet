<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox id="body" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/login.css"  fx:controller="animalcross.Main" alignment="CENTER">
	<VBox styleClass="main" alignment="CENTER" >
	
		<Label text="Welcome to Animal Crossing"/>
		<ImageView fitHeight="224.0" fitWidth="290.0">    
		   <image>
		      <Image url="@../images/uob_logo1.jpg"/>
		   </image>
		</ImageView>

		<Label text="User ID"/>
		<TextField maxWidth="300.0"/> <!-- fx:id="userID" --> 

		<Label text="Password"/>
		<PasswordField maxWidth="300.0"/>

           
		<Button styleClass="login" text="Log in"/> <!-- onAction="#signIn"  --> 

		<Button text="Create a new Account"/>

		<Button text="Forget your password?"/>
	</VBox>
</VBox>
